<!DOCTYPE html>

<html lang="en">

<!-- Include header. -->
<%- include('header'); -%>

<body>
    <!-- Include navbar. -->
    <%- include('navbar'); -%>

    <!-- Table for employees. -->
    <% if (employees.length) { %>
        <h2>‐‐ Employee Listing ‐‐</h2><br />
        <a href="/new">Add New</a>
        <table class="table table‐hover">
            <thead class="thead‐dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(function (entry) { %>
                <tr>
                    <td><%= entry.firstName %></td>
                    <td><%= entry.lastName %></td>
                </tr>
                <% }) %>
            </tbody>                
        </table>
    <% } else { %>
        No entries! <a href="/new">Add one!</a>
    <% } %>
    
    <%- include ('footer'); -%>
        
</body>
</html>